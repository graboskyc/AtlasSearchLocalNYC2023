@inject NavigationManager NavigationManager

<div class="input-group input-group-lg">
  <span class="input-group-text">
    <img src='/BrandAssets/Icons/Technical_ATLAS_Search10x.png' width="100px" />
  </span>
  <input type="text" class="form-control" placeholder="Search Specialist Content..." @bind-value="SearchTerm" @bind-value:event="oninput" @onkeydown="@CheckEnterKey">
  <button class="btn btn-outline-secondary" type="button" @onclick="RedirectSearch">Search</button>
</div>

@code {    
    [Parameter]
    public string SearchTerm {get; set;}

    [Parameter]
    public EventCallback<string> OnSearchCallback { get; set; }

    private async Task RedirectSearch() {
        await OnSearchCallback.InvokeAsync(SearchTerm);
        NavigationManager.NavigateTo("/ContentSearch/" + SearchTerm);
    } 

    public async void CheckEnterKey(KeyboardEventArgs e) {
      if (e.Code == "Enter" || e.Code == "NumpadEnter") {
        await  RedirectSearch();
      }
    }
}